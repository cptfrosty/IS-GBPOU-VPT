        </Button>
        <Label Content="Карта" HorizontalAlignment="Left" Margin="735,348,0,0" VerticalAlignment="Top" Width="76" Foreground="#1C2631" FontSize="24" FontFamily="Arial"/>

        <!--Контейнер для погоды-->
