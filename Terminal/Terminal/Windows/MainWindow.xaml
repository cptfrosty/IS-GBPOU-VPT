            <Label x:Name="LabelCity" Content="Волжский" HorizontalAlignment="Left" Margin="269,200,0,0" VerticalAlignment="Top" FontSize="36"/>
            <Label x:Name="LabelTemp" Content="?°" HorizontalAlignment="Left" Margin="420,315,0,0" VerticalAlignment="Top" FontSize="48" Height="71" Width="94"/>
            <Label x:Name="LabelMain" Content="Main" FontSize="36" Margin="100,470,97.5,344" Width="520" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="58"/>
            <Image x:Name="IconWeather" HorizontalAlignment="Left" Height="120" Margin="231,315,0,0" VerticalAlignment="Top" Width="120" />

            <Image x:Name="Image_Pressure" HorizontalAlignment="Left" Height="60" Margin="130,560,0,0" VerticalAlignment="Top" Width="60" Grid.Column="1" Source="pack://application:,,,/Weather/icons/davleniye.png" />
            <Image x:Name="Image_Humidity" HorizontalAlignment="Left" Height="60" Margin="130,665,0,0" VerticalAlignment="Top" Width="60" Grid.Column="1" Source="pack://application:,,,/Weather/icons/Kaplya.png" />
            <Image x:Name="Image_Wind" HorizontalAlignment="Left" Height="60" Margin="380,560,0,0" VerticalAlignment="Top" Width="60" Grid.Column="1" Source="pack://application:,,,/Weather/icons/Veter.png"/>
            <Image x:Name="Image_Direction" HorizontalAlignment="Left" Height="60" Margin="380,665,0,0" VerticalAlignment="Top" Width="60" Grid.Column="1" Source="pack://application:,,,/Weather/icons/strelka.png" />

            <Label x:Name="Text_Pressure" Content="Давление" Grid.Column="1" HorizontalAlignment="Left" Margin="200,560,0,0" VerticalAlignment="Top" FontSize="32"/>
            <Label x:Name="Text_Direction" Content="Направление" Grid.Column="1" HorizontalAlignment="Left" Margin="450,670,0,0" VerticalAlignment="Top" FontSize="32"/>
            <Label x:Name="Text_Wind" Content="Ветер" Grid.Column="1" HorizontalAlignment="Left" Margin="450,560,0,0" VerticalAlignment="Top" FontSize="32"/>
            <Label x:Name="Text_Humidity" Content="Влажность" Grid.Column="1" HorizontalAlignment="Left" Margin="200,670,0,0" VerticalAlignment="Top" FontSize="32"/>

            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="544" Margin="100,210,0,0" VerticalAlignment="Top" Width="520" CornerRadius="3,3,3,3"/>
        </Grid>
        <Button Content="" Margin="381,922,44,0" Height="150" Foreground="White" Click="Button_FAQ_Click" Grid.Column="2">
            <Button.BorderBrush>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/AllPicture/faq.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="50,668,0,0" VerticalAlignment="Top" Width="252" Height="174" BorderBrush="Black" RenderTransformOrigin="1.267,0.521" Click="Rutube_Click"   >
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/AllPicture/Rutube.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="350,668,0,0" VerticalAlignment="Top" Width="252" Height="174" BorderBrush="Black" RenderTransformOrigin="1.267,0.521" Click="Vk_Click"   >
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/AllPicture/Vk.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="650,668,0,0" VerticalAlignment="Top" Width="252" Height="174" BorderBrush="Black" RenderTransformOrigin="1.267,0.521" Click="Telegram_Click">
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/AllPicture/telegram.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="38.5,668,0,0" VerticalAlignment="Top" Width="252" Height="174" BorderBrush="Black" RenderTransformOrigin="1.267,0.521" Click="Schedule_Click" Grid.Column="1">
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/AllPicture/Schedule.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label Content="Расписание
               " HorizontalAlignment="Left" Margin="92.5,806,0,0" VerticalAlignment="Top" Width="146" Foreground="#1C2631" FontSize="24" FontFamily="Arial" Grid.Column="1"/>
        <Button Content="" HorizontalAlignment="Left" Margin="38.5,438,0,0" VerticalAlignment="Top" Width="252" Height="174" BorderBrush="Black" RenderTransformOrigin="1.267,0.521" Click="Qvantorium_Click" Grid.Column="1">
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/AllPicture/Qvantorium.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label Content="Кванториум" HorizontalAlignment="Left" Margin="92.5,574,0,0" VerticalAlignment="Top" Width="146" Foreground="#1C2631" FontSize="24" FontFamily="Arial" Grid.Column="1"/>

        <Button Content="" HorizontalAlignment="Left" Margin="650,438,0,0" VerticalAlignment="Top" Width="252" Height="174" BorderBrush="Black" RenderTransformOrigin="1.267,0.521" Click="Additional_Click">
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/AllPicture/Additional.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label Content="Кружки" HorizontalAlignment="Left" Margin="735,576,0,0" VerticalAlignment="Top" Width="89" Foreground="#1C2631" FontSize="24" FontFamily="Arial"/>
    </Grid>
</Window>
