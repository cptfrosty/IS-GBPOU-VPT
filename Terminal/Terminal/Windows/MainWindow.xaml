            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/AllPicture/mMasterkaya.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

        <Button Content="" HorizontalAlignment="Left" Margin="650,210,0,0" VerticalAlignment="Top" Width="252" Height="174" BorderBrush="Black" Click="Button_MapWin_Click" >
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/AllPicture/MapWin.png" Stretch="Uniform"/>
