<Window x:Class="Terminal.OpenPictureWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Terminal"
        mc:Ignorable="d"
        Title="OpenPictureWin" Height="1080" Width="1920" WindowState="Maximized" ResizeMode="NoResize" WindowStyle="None" Background="#ECF0F5">
    <Grid>
        <Image x:Name="FullPicture" HorizontalAlignment="Left" Height="1080" VerticalAlignment="Top" Width="1920"/>
        <Button Content="" Height="1080" HorizontalAlignment="Right" Width="1920" VerticalAlignment="Top" Click="Exit" Margin="0,0,0,0" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF808081" Opacity="0"/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="back.png" Stretch="UniformToFill" Opacity="0"/>
            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="150" Margin="50,35,0,0" Source="logo.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="logo.png"/>
            </Image.OpacityMask>
        </Image>
    </Grid>
</Window>
